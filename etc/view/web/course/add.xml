<?xml version="1.0" encoding="UTF-8"?>
<viewport window="true">
    <formpanel entity="course" id="form" title="添加课程" inwindow="true">
        <element field="name"  type="text" desc="课程名" />
        <element field="center_id"  type="remoteSelect" url="/web/center/alldata" valueField="cid" descField="name" desc="中心" />
        <element field="price"  type="text" desc="价格" />
        <element field="is_probation"  type="localSelect" localData="[{desc:'是', value:'1'},{desc:'否', value:'0'}]" desc="是否促销" />
        <element field="type" type="localSelect" localData="[{desc:'音乐类', value:'1'},{desc:'体育类', value:'2'},{desc:'英语类', value:'3'},{desc:'艺术类', value:'4'}]" desc="课程类别" />
        <element field="begin_age"  type="text" desc="开始年龄(月)" />
        <element field="end_age"  type="text" desc="结束年龄(月)" />
        <element field="intro"  type="textarea" desc="课程介绍" />
        <element field="app_display_level"  type="text" desc="APP显示优先级(没有填: 0)" />
        <element field="create_time"  type="datetime" desc="创建时间" />
        <element field="lesson_num"  type="text" desc="课节数目" />
    </formpanel>
</viewport>