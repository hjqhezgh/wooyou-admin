<?xml version="1.0" encoding="UTF-8"?>
<viewport window="true">
    <customformpanel id="gallery" saveUrl="/web/gallery/update.json" load="true" loadUrl="/web/gallery/load.json" title="修改美术图片" inwindow="true">
        <element field="id" type="hidden"/>
        <element field="title" type="text" desc="标题" validate="notNull" readonly="true"/>
        <element field="comment" type="textarea" desc="老师评语" validate="notNull" tip="评语不能为空"/>
        <element field="image_name" type="hidden"/>
        <element field="image_suffix" type="hidden"/>
        <element field="image_category" type="checkbox" desc="图片类别" validate="notNull" url="/web/gallery/image_category.json" valueField="value" descField="desc" tip="图片类别不能为空"/>
        <element field="image1" type="image" desc="图片1" validate="notNull" tip="图片格式(png|jpg|jpeg);图片尺寸(240x150px)"/>
        <element field="image2" type="image" desc="图片2" validate="notNull" tip="图片格式(png|jpg|jpeg);图片尺寸(223x220px)"/>
        <element field="image3" type="image" desc="图片3" validate="notNull" tip="图片格式(png|jpg|jpeg);图片尺寸(800x600px)"/>
    </customformpanel>
</viewport>