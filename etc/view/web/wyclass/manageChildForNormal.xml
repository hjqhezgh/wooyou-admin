<?xml version="1.0" encoding="UTF-8"?>
<viewport window="true">

    <customgridpanel url="/web/child/childInNormalSchedule.json" pageSize="15" title="已报名学生" id="grid1" width="1200" height="150" loadUrl="true" mutiSelect="true" pageId="grid1" actionWidth="150">

        <column field="childName" desc="学生"/>
        <column field="phone" desc="联系电话"/>
        <column field="signInType" desc="签到状态">
            <formatter>
                <![CDATA[
                        if(cellvalue==1) {
                            return "签到成功";
                        }else if(cellvalue==2){
                            return "请假";
                        }else if(cellvalue==3){
                            return "旷课";
                        }else{
                            return "未签到";
                        }
                ]]>
            </formatter>
        </column>
        <column field="signInTime" desc="签到时间">
            <formatter>
                <![CDATA[
                        if(cellvalue) {
                            return cellvalue.formatChar14Time();
                        }else{
                            return "";
                        }
                ]]>
            </formatter>
        </column>
        <column field="courseName" desc="合同">
            <formatter>
                <![CDATA[
                        if(rowObject[5]) {
                            return rowObject[5]+"-"+cellvalue+"-"+rowObject[6];
                        }else{
                            return '<span style="color:red">未关联合同</span>';
                        }
                ]]>
            </formatter>
        </column>
        <column field="contract_no" desc="合同号" hidden="true"/>
        <column field="apply_time" desc="签单时间" hidden="true"/>
        <action desc="临时剔除" url="/web/wyclass/removeChildForNormalOnce.json" linkType="ajax" confirmMsg="确认将该学生从本次课表中移除吗？" actionParams="[{name:'ids',value:'id'}]"/>
        <action desc="结课" url="/web/wyclass/removeChildForNormal.json" linkType="ajax" confirmMsg="确认结束该学生当前的课程吗？" actionParams="[{name:'ids',value:'id'}]"/>
        <action desc="请假" url="/web/wyclass/leaveForChild.json" linkType="ajax" confirmMsg="确认请假该学生吗？" actionParams="[{name:'ids',value:'id'}]"/>
        <action desc="合同登记" url="/web/wyclass/contractCheckIn" linkType="iframeWindow" actionParams="[{name:'childId',value:'id'}]"/>
        <action desc="点评" url="/web/class_schedule_attach" linkType="iframeWindow" actionParams="[{name:'childId',value:'id'}]"/>
    </customgridpanel>

    <customgridpanel url="/web/child/childInCenter.json" pageSize="15" title="选择学生" id="grid2" width="1200" height="250" loadUrl="true" mutiSelect="true" pageId="grid2">
        <search field="kw" searchType="like" inputType="text" desc="名字/电话"/>

        <column field="centerName" desc="门店"/>
        <column field="contactPhone" desc="学生"/>
        <column field="child" desc="联系电话"/>

        <toolaction desc="跟班" url="/web/wyclass/addChildForNormalTempelate.json"  colorClass="h-bg-green" linkType="mutiSelect">
            <callback>
                <![CDATA[
                     if(!data.success){
                        alert(data.msg)
                     }
                     grid1.grid.trigger("reloadGrid");
                ]]>
            </callback>
        </toolaction>

        <toolaction desc="临时插班" url="/web/wyclass/addChildForNormalOnce.json"  colorClass="h-bg-green" linkType="mutiSelect">
            <callback>
                <![CDATA[
                     if(!data.success){
                        alert(data.msg)
                     }
                     grid1.grid.trigger("reloadGrid");
                ]]>
            </callback>
        </toolaction>
    </customgridpanel>
</viewport>