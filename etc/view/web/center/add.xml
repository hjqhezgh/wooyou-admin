<?xml version="1.0" encoding="UTF-8"?>
<viewport window="true">
    <formpanel entity="center" id="form" title="添加中心" inwindow="true">
        <element field="name" type="text" validate="notNull" desc="名字"/>
        <element field="telephone" type="text" validate="" desc="联系电话"/>
        <element field="lan_ip" type="text" validate="" desc="局域网ip"/>
        <element field="domain_name" type="text" validate="" desc="公网域名"/>
        <element field="intro"  type="textarea" desc="简介" />
        <element field="is_show"  type="localSelect" validate="notNull" localData="[{desc:'是',value:'1'},{desc:'否',value:'2'}]" desc="是否APP上展示" />
    </formpanel>
</viewport>